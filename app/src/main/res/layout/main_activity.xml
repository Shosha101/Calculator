<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingVertical="50sp"
        android:text="25+34"
        android:textColor="@color/white"
        android:textSize="35dp"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="60sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button3"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="35sp"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button2"

                android:text="7"
                android:textColor="@color/white"
                android:textSize="35sp"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button2"

                android:text="4"
                android:textColor="@color/white"
                android:textSize="35sp"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button2"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="35sp"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button2"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="35sp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button3"
                android:text="("
                android:textColor="@color/black"
                android:textSize="35sp"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button2"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="35sp"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button2"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="35sp"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button2"

                android:text="2"
                android:textColor="@color/white"
                android:textSize="35sp"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button2"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="35sp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button3"
                android:text=")"
                android:textColor="@color/black"
                android:textSize="35sp"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button2"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="35sp"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button2"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="35sp"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button2"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="35sp"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button2"
                android:text="."
                android:textColor="@color/white"
                android:textSize="35sp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button1"
                android:text="+/-"
                android:textColor="@color/white"
                android:textSize="30sp"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button1"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="30sp">

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button1"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="30sp"></Button>

            <Button
                android:layout_width="wrap_content"

                android:layout_height="25dp"
                android:layout_margin="7sp"
                android:layout_weight="2.5"
                android:background="@drawable/rounded_button1"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30sp"></Button>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>